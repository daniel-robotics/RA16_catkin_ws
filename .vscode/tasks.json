{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CATKIN: Build All Packages",
            "type": "catkin_build",
            "task": "build",
            "problemMatcher": [
                "$catkin-gcc",
                "$catkin-cmake"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": true
            }
        },
        {
            "label": "CATKIN: Build Current Package",
            "type": "catkin_build",
            "group": "build",
            "task": "build current package",
            "problemMatcher": [
                "$catkin-gcc",
                "$catkin-cmake"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": true
            }
        },
        {
            "label": "CATKIN: Clean Workspace",
            "type": "catkin_build",
            "group": "build",
            "task": "clean",
            "problemMatcher": [
                "$catkin-gcc",
                "$catkin-cmake"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "CATKIN: Init Workspace",
            "type": "shell",
            "group": "build",
            "command": "${workspaceFolder}/init.sh",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}